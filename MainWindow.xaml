<Window x:Class="CrosshairY.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrosshairY"
        mc:Ignorable="d"
        Title="CrosshairY" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FFF7F7F7" FontFamily="Segoe UI">
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" Color="#888" BlurRadius="8" ShadowDepth="2" Opacity="0.2"/>
        <local:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
        <local:ComboBoxItemToStringConverter x:Key="ComboBoxItemToStringConverter"/>
    </Window.Resources>
    <Grid Margin="20">
        <Border Background="White" CornerRadius="8" Padding="20"
                BorderBrush="#DDD" BorderThickness="1"
                Effect="{DynamicResource DropShadowEffect}">
            <StackPanel>
                <TextBlock Text="CrosshairY - Free Crosshair Overlay" FontSize="24" FontWeight="Bold" Foreground="#333"/>

                <!-- Crosshair Type -->
                <TextBlock Text="Crosshair Type" Margin="0,20,0,5" FontWeight="SemiBold" Foreground="#444"/>
                <ComboBox x:Name="CrosshairTypeComboBox" Width="180" Height="28" FontSize="14" ToolTip="Select crosshair style"
                          SelectedItem="{Binding SelectedCrosshairTypeItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <ComboBoxItem Content="Cross" IsSelected="True"/>
                    <ComboBoxItem Content="Dot"/>
                    <ComboBoxItem Content="Circle"/>
                </ComboBox>

                <!-- Color Picker -->
                <TextBlock Text="Color" Margin="0,15,0,5" FontWeight="SemiBold" Foreground="#444"/>
                <StackPanel Orientation="Horizontal">
                    <Rectangle x:Name="ColorPreview" Width="50" Height="28" Stroke="#CCC" StrokeThickness="1"
                               Fill="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"/>
                    <Button x:Name="PickColorButton" Width="120" Height="28" Margin="10,0,0,0" Content="Pick Color"
                            Click="OnPickColorClick" Cursor="Hand" ToolTip="Choose crosshair color">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#4682B4"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#5A9BDD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Size Slider -->
                <TextBlock Text="Size" Margin="0,15,0,5" FontWeight="SemiBold" Foreground="#444"/>
                <StackPanel Orientation="Horizontal">
                    <Slider x:Name="SizeSlider" Width="180" Minimum="5" Maximum="50" Value="{Binding Size, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            ToolTip="Adjust crosshair size"/>
                    <TextBlock x:Name="SizeValueText" Text="{Binding Size, StringFormat={}{0}px}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Thickness Slider -->
                <TextBlock Text="Thickness" Margin="0,15,0,5" FontWeight="SemiBold" Foreground="#444"/>
                <StackPanel Orientation="Horizontal">
                    <Slider x:Name="ThicknessSlider" Width="180" Minimum="1" Maximum="10" Value="{Binding Thickness, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            ToolTip="Adjust crosshair thickness"/>
                    <TextBlock x:Name="ThicknessValueText" Text="{Binding Thickness, StringFormat={}{0}px}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Opacity Slider -->
                <TextBlock Text="Opacity" Margin="0,15,0,5" FontWeight="SemiBold" Foreground="#444"/>
                <StackPanel Orientation="Horizontal">
                    <Slider x:Name="OpacitySlider" Width="180" Minimum="0.1" Maximum="1.0" Value="{Binding Opacity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            ToolTip="Adjust crosshair opacity"/>
                    <TextBlock x:Name="OpacityValueText" Text="{Binding Opacity, StringFormat={}{0:P0}}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Toggle Crosshair -->
                <Button x:Name="ToggleCrosshairButton" Width="180" Height="36" Margin="0,20,0,0"
                        Click="OnToggleCrosshairClick" Cursor="Hand" ToolTip="Show or hide the crosshair">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#2E8B57"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3CA76A"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock x:Name="ToggleButtonText" Text="Show Crosshair" TextAlignment="Center"/>
                </Button>

                <!-- Save Profile -->
                <Button x:Name="SaveProfileButton" Width="180" Height="36" Margin="0,15,0,0"
                        Click="OnSaveProfileClick" Cursor="Hand" ToolTip="Save current crosshair settings">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#007ACC"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1A8FFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="Save Profile" TextAlignment="Center"/>
                </Button>

                <!-- Status -->
                <TextBlock x:Name="StatusText" Text="Ready" Margin="0,20,0,0" FontStyle="Italic" Foreground="#666" FontSize="13"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>